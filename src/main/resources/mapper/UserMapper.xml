<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pakho.cms.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.pakho.cms.bean.User">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="gender" column="gender" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="registerTime" column="register_time" jdbcType="TIMESTAMP"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="birthday" column="birthday" jdbcType="DATE"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="isVip" column="is_vip" jdbcType="INTEGER"/>
        <result property="expiresTime" column="expires_time" jdbcType="TIMESTAMP"/>
        <result property="deleted" column="deleted" jdbcType="INTEGER"/>
    </resultMap>

    <resultMap id="ExtendResultMap" type="com.pakho.cms.bean.extend.UserExtend"
               extends="BaseResultMap">
        <association property="role" resultMap="com.pakho.cms.mapper.RoleMapper.BaseResultMap"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,username,password,
        avatar,gender,email,
        phone,register_time,status,
        birthday,role_id,is_vip,
        expires_time,deleted
    </sql>
    <select id="queryAllUserWithRole" resultMap="ExtendResultMap">
        select u.id,u.username,u.password,
        u.avatar,u.gender,u.email,u.phone,u.register_time,u.status,
        u.role_id,u.birthday,u.is_vip,u.expires_time,u.deleted,
        r.id rid,r.name,r.description
        from cms_user u
        left join cms_role r
        on u.role_id = r.id
        <where>
            u.deleted = 0
            <if test="roleId!=null">
                and u.role_id=#{roleId}
            </if>
            <if test="status!=null and status!=''">
                and u.status=#{status}
            </if>
            <if test="isVip!=null">
                and u.is_vip=#{isVip}
            </if>
            <if test="username!=null and username!=''">
                and u.username like concat('%',#{username},'%')
            </if>
        </where>
    </select>
</mapper>
